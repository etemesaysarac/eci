{
  "name": "eci",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "services/*",
    "connectors/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently -n API,WORKER,PANEL -c auto \"npm run eci:api\" \"npm run eci:worker\" \"npm run dev -w @eci/panel\"",
    "build": "npm run build -ws",
    "lint": "npm run lint -ws",
    "eci:api": "npm run eci:api -w @eci/core",
    "eci:worker": "npm run eci:worker -w @eci/core",
    "eci:boot": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/eci_boot.ps1",
    "eci:db": "npm -w @eci/core run prisma:deploy",
    "eci:proof10": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/ps1/generate_sprint10_proof.ps1",
    "eci:proof11": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/ps1/generate_sprint11_proof.ps1",
    "eci:proof12": "powershell -ExecutionPolicy Bypass -File scripts/ps1/generate_sprint12_proof.ps1",
    "eci:closeout11_1": "powershell -ExecutionPolicy Bypass -File scripts/ps1/sprint11_1_closeout.ps1",
    "eci:stop": "powershell -ExecutionPolicy Bypass -File scripts/ps1/eci_stop.ps1"
  },
  "devDependencies": {
    "@prisma/engines": "6.19.0",
    "concurrently": "^9.0.0",
    "prisma": "6.19.0"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "axios": "^1.13.2",
    "bullmq": "^5.66.3",
    "ioredis": "^5.8.2",
    "zod": "^4.2.1"
  }
}
