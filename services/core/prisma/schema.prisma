// Prisma schema for ECI core
// Source of truth: code under services/core/src/eci

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Connection {
  id        String   @id @default(cuid())
  type      String
  name      String
  status    String   @default("active")
  configEnc String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs                  Job[]
  orders                Order[]
  shipmentPackages      ShipmentPackage[]
  syncState             SyncState?
  shipmentPackageActions ShipmentPackageAction[]
  webhookSubscriptions  WebhookSubscription[]
  webhookEvents         WebhookEvent[]

  // Sprint 9: Product Catalog
  products              Product[]
  productVariants       ProductVariant[]
  productBatchRequests  ProductBatchRequest[]

  // Sprint 10: Inventory
  inventoryConfirmedStates InventoryConfirmedState[]

  // Sprint 12: Claims / Iade
  claims                Claim[]
  claimItems            ClaimItem[]
  claimAudits           ClaimAudit[]
  claimCommands         ClaimCommand[]

  // Sprint 13: QnA
  questions             Question[]
  answers               Answer[]
  qnaCommands           QnaCommand[]
}

model Job {
  id           String   @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  type         String
  status       String   @default("queued")
  startedAt    DateTime?
  finishedAt   DateTime?
  summary      Json?
  error        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([connectionId])
}

model Order {
  id             String   @id @default(cuid())
  connectionId   String
  connection     Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace    String   @default("trendyol")
  channelOrderId String
  status         String?
  raw            Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Prisma name kept for code: where: { connectionId_marketplace_channelOrderId: {...} }
  // DB constraint already exists in migration(so_xyz) under this name.
  @@unique([connectionId, marketplace, channelOrderId], name: "connectionId_marketplace_channelOrderId", map: "Order_connectionId_marketplace_channelOrderId_key")
  @@index([connectionId])
}

model ShipmentPackage {
  id                String   @id @default(cuid())
  connectionId      String
  connection        Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace       String   @default("trendyol")
  shipmentPackageId String
  status            String?
  raw               Json
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Prisma name kept for code: where: { connectionId_marketplace_shipmentPackageId: {...} }
  @@unique([connectionId, marketplace, shipmentPackageId], name: "connectionId_marketplace_shipmentPackageId", map: "ShipmentPackage_connectionId_marketplace_shipmentPackageId_key")
  @@index([connectionId])
}

model SyncState {
  connectionId  String   @id
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  lastSuccessAt DateTime?
  lastAttemptAt DateTime?
  lastStatus    String?
  lastJobId     String?
  lastError     String?

  updatedAt     DateTime @updatedAt

  @@map("sync_state")
}

// Sprint 7 audit
model ShipmentPackageAction {
  id                String   @id @default(cuid())
  connectionId      String
  connection        Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  shipmentPackageId String
  actionType        String   // update-tracking-number | change-cargo-provider | split | update-box-info
  request           Json
  response          Json?
  status            String   // success | failed
  error             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([connectionId, shipmentPackageId])
  @@map("shipment_package_action")
}

// Sprint 8: Webhooks (subscription + event audit)
model WebhookSubscription {
  id                 String   @id @default(cuid())
  connectionId        String
  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  provider            String   // "TRENDYOL"
  remoteWebhookId     String?
  status              String   @default("ACTIVE") // ACTIVE | PASSIVE

  endpointUrl         String
  authenticationType  String   // API_KEY | BASIC_AUTHENTICATION

  // Lookup için hash alanları (plaintext tutmuyoruz)
  apiKeyHash          String?
  basicUsername       String?
  basicPasswordHash   String?

  // Opsiyonel: subscribed statuses (audit)
  subscribedStatuses  Json?

  // Secret'ları şifreli saklamak için (apiKey/username/password)
  secretsEnc          String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  events              WebhookEvent[]

  @@unique([connectionId, provider], name: "connectionId_provider")
  @@index([remoteWebhookId])
  @@index([apiKeyHash])
  @@index([basicUsername])
}

model WebhookEvent {
  id              String   @id @default(cuid())
  connectionId     String
  connection       Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  subscriptionId   String
  subscription     WebhookSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  provider         String   // "TRENDYOL"
  receivedAt       DateTime @default(now())

  eventKey         String   // unique (dedup)
  bodyHash         String
  headers          Json?
  rawBody          Json?
  rawBodyText      String?

  verifyStatus     String   @default("ok") // ok | fail
  dedupHit         Boolean  @default(false)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([eventKey])
  @@index([connectionId, receivedAt])
  @@index([subscriptionId, receivedAt])
}

// Sprint 9: Product Catalog
model Product {
  id           String     @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace  String     @default("trendyol")

  productCode  String
  title        String?
  brandId      Int?
  categoryId   Int?
  status       String?
  approved     Boolean    @default(true)
  archived     Boolean    @default(false)

  raw          Json

  variants     ProductVariant[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([connectionId, marketplace, productCode], map: "Product_connectionId_marketplace_productCode_key")
  @@index([connectionId])
  @@index([productCode])
}

model ProductVariant {
  id           String     @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace  String     @default("trendyol")

  productId    String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  barcode      String
  stock        Int?
  listPrice    Decimal?   @db.Decimal(18, 4)
  salePrice    Decimal?   @db.Decimal(18, 4)
  currency     String?

  raw          Json

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([connectionId, marketplace, barcode], map: "ProductVariant_connectionId_marketplace_barcode_key")
  @@index([connectionId])
  @@index([barcode])
  @@index([productId])
}

model ProductBatchRequest {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  remoteBatchId String?
  type          String
  status        String     @default("created")

  raw           Json?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, remoteBatchId], map: "ProductBatchRequest_connectionId_marketplace_remoteBatchId_key")
  @@index([connectionId])
  @@index([remoteBatchId])
}


// Sprint 10 — Inventory confirmed state (used for changed-only diff)
model InventoryConfirmedState {
  connectionId       String
  barcode            String
  quantity           Int
  salePrice          Decimal   @db.Decimal(18, 4)
  listPrice          Decimal   @db.Decimal(18, 4)
  currencyType       String?
  lastBatchRequestId String?
  lastConfirmedAt    DateTime  @default(now())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  connection Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@id([connectionId, barcode])
  @@index([connectionId])
  @@index([barcode])
  @@map("inventory_confirmed_state")
}


// Sprint 12: Claims / Iade
model Claim {
  id             String     @id @default(cuid())
  connectionId   String
  connection     Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace    String     @default("trendyol")

  claimId         String
  status          String?
  orderNumber     String?
  claimDate       DateTime?
  lastModifiedAt  DateTime?

  raw            Json

  items          ClaimItem[]

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@unique([connectionId, marketplace, claimId], map: "Claim_connectionId_marketplace_claimId_key")
  @@index([connectionId])
  @@index([claimId])
  @@index([status])
}

model ClaimItem {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  claimDbId     String
  claim         Claim      @relation(fields: [claimDbId], references: [id], onDelete: Cascade)

  claimId       String
  claimItemId   String

  barcode       String?
  sku           String?
  quantity      Int?
  itemStatus    String?

  reasonCode    String?
  reasonName    String?

  raw           Json

  audits        ClaimAudit[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, claimItemId], map: "ClaimItem_connectionId_marketplace_claimItemId_key")
  @@index([connectionId])
  @@index([claimDbId])
  @@index([claimItemId])
  @@index([barcode])
}

model ClaimAudit {
  id             String     @id @default(cuid())
  connectionId   String
  connection     Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  marketplace    String     @default("trendyol")

  claimItemDbId  String
  claimItem      ClaimItem  @relation(fields: [claimItemDbId], references: [id], onDelete: Cascade)

  previousStatus String?
  newStatus      String?
  executorApp    String?
  executorUser   String?
  date           DateTime

  raw            Json

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // NOTE: Postgres identifier limit is 63 bytes; keep DB constraint names short.
  @@unique([connectionId, marketplace, claimItemDbId, date, newStatus], map: "uq_claim_audit")
  @@index([connectionId])
  @@index([claimItemDbId])
  @@index([date])
}

model ClaimCommand {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  claimId       String?
  commandType   String
  status        String     @default("queued")

  request       Json
  response      Json?
  error         String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([connectionId])
  @@index([claimId])
  @@index([commandType])
  @@index([status])
}


// Sprint 13: QnA (Questions / Answers)
model Question {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  // Trendyol question id (remote)
  questionId    String

  status        String?
  askedAt       DateTime?
  lastModifiedAt DateTime?

  // Display fields (best-effort, depends on marketplace payload)
  customerId    String?
  userName      String?
  showUserName  Boolean?

  productName   String?
  productMainId String?
  imageUrl      String?
  webUrl        String?

  text          String?
  raw           Json

  answers       Answer[]
  commands      QnaCommand[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, questionId], map: "Question_connectionId_marketplace_questionId_key")
  @@index([connectionId])
  @@index([questionId])
  @@index([status])
  @@index([askedAt])
}

model Answer {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  // Link to Question
  questionDbId  String
  question      Question   @relation(fields: [questionDbId], references: [id], onDelete: Cascade)

  // Remote id (duplicated for unique & lookup)
  questionId    String

  answerText    String
  answeredAt    DateTime?

  executorApp   String?
  executorUser  String?

  raw           Json?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, questionId], map: "Answer_connectionId_marketplace_questionId_key")
  @@index([connectionId])
  @@index([questionDbId])
  @@index([answeredAt])
}

// Command/audit table for idempotency + retries (POST answer)
model QnaCommand {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  questionDbId  String?
  question      Question?  @relation(fields: [questionDbId], references: [id], onDelete: SetNull)
  questionId    String?

  commandType   String
  status        String     @default("queued")

  idempotencyKey String

  request       Json
  response      Json?
  error         String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, idempotencyKey], map: "uq_qna_command_idem")
  @@index([connectionId])
  @@index([questionId])
  @@index([commandType])
  @@index([status])
}
