// Prisma schema for ECI core
// Source of truth: code under services/core/src/eci

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Connection {
  id        String   @id @default(cuid())
  type      String
  name      String
  status    String   @default("active")
  configEnc String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs                  Job[]
  orders                Order[]
  shipmentPackages      ShipmentPackage[]
  syncState             SyncState?
  shipmentPackageActions ShipmentPackageAction[]
  webhookSubscriptions  WebhookSubscription[]
  webhookEvents         WebhookEvent[]

  // Sprint 9: Product Catalog
  products              Product[]
  productVariants       ProductVariant[]
  productBatchRequests  ProductBatchRequest[]
}

model Job {
  id           String   @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  type         String
  status       String   @default("queued")
  startedAt    DateTime?
  finishedAt   DateTime?
  summary      Json?
  error        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([connectionId])
}

model Order {
  id             String   @id @default(cuid())
  connectionId   String
  connection     Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace    String   @default("trendyol")
  channelOrderId String
  status         String?
  raw            Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Prisma name kept for code: where: { connectionId_marketplace_channelOrderId: {...} }
  // DB constraint already exists in migration(so_xyz) under this name.
  @@unique([connectionId, marketplace, channelOrderId], name: "connectionId_marketplace_channelOrderId", map: "Order_connectionId_marketplace_channelOrderId_key")
  @@index([connectionId])
}

model ShipmentPackage {
  id                String   @id @default(cuid())
  connectionId      String
  connection        Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace       String   @default("trendyol")
  shipmentPackageId String
  status            String?
  raw               Json
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Prisma name kept for code: where: { connectionId_marketplace_shipmentPackageId: {...} }
  @@unique([connectionId, marketplace, shipmentPackageId], name: "connectionId_marketplace_shipmentPackageId", map: "ShipmentPackage_connectionId_marketplace_shipmentPackageId_key")
  @@index([connectionId])
}

model SyncState {
  connectionId  String   @id
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  lastSuccessAt DateTime?
  lastAttemptAt DateTime?
  lastStatus    String?
  lastJobId     String?
  lastError     String?

  updatedAt     DateTime @updatedAt

  @@map("sync_state")
}

// Sprint 7 audit
model ShipmentPackageAction {
  id                String   @id @default(cuid())
  connectionId      String
  connection        Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  shipmentPackageId String
  actionType        String   // update-tracking-number | change-cargo-provider | split | update-box-info
  request           Json
  response          Json?
  status            String   // success | failed
  error             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([connectionId, shipmentPackageId])
  @@map("shipment_package_action")
}

// Sprint 8: Webhooks (subscription + event audit)
model WebhookSubscription {
  id                 String   @id @default(cuid())
  connectionId        String
  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  provider            String   // "TRENDYOL"
  remoteWebhookId     String?
  status              String   @default("ACTIVE") // ACTIVE | PASSIVE

  endpointUrl         String
  authenticationType  String   // API_KEY | BASIC_AUTHENTICATION

  // Lookup için hash alanları (plaintext tutmuyoruz)
  apiKeyHash          String?
  basicUsername       String?
  basicPasswordHash   String?

  // Opsiyonel: subscribed statuses (audit)
  subscribedStatuses  Json?

  // Secret'ları şifreli saklamak için (apiKey/username/password)
  secretsEnc          String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  events              WebhookEvent[]

  @@unique([connectionId, provider], name: "connectionId_provider")
  @@index([remoteWebhookId])
  @@index([apiKeyHash])
  @@index([basicUsername])
}

model WebhookEvent {
  id              String   @id @default(cuid())
  connectionId     String
  connection       Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  subscriptionId   String
  subscription     WebhookSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  provider         String   // "TRENDYOL"
  receivedAt       DateTime @default(now())

  eventKey         String   // unique (dedup)
  bodyHash         String
  headers          Json?
  rawBody          Json?
  rawBodyText      String?

  verifyStatus     String   @default("ok") // ok | fail
  dedupHit         Boolean  @default(false)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([eventKey])
  @@index([connectionId, receivedAt])
  @@index([subscriptionId, receivedAt])
}

// Sprint 9: Product Catalog
model Product {
  id           String     @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace  String     @default("trendyol")

  productCode  String
  title        String?
  brandId      Int?
  categoryId   Int?
  status       String?
  approved     Boolean    @default(true)
  archived     Boolean    @default(false)

  raw          Json

  variants     ProductVariant[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([connectionId, marketplace, productCode], map: "Product_connectionId_marketplace_productCode_key")
  @@index([connectionId])
  @@index([productCode])
}

model ProductVariant {
  id           String     @id @default(cuid())
  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace  String     @default("trendyol")

  productId    String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  barcode      String
  stock        Int?
  listPrice    Decimal?   @db.Decimal(18, 4)
  salePrice    Decimal?   @db.Decimal(18, 4)
  currency     String?

  raw          Json

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([connectionId, marketplace, barcode], map: "ProductVariant_connectionId_marketplace_barcode_key")
  @@index([connectionId])
  @@index([barcode])
  @@index([productId])
}

model ProductBatchRequest {
  id            String     @id @default(cuid())
  connectionId  String
  connection    Connection @relation(fields: [connectionId], references: [id], onDelete: Restrict)
  marketplace   String     @default("trendyol")

  remoteBatchId String?
  type          String
  status        String     @default("created")

  raw           Json?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([connectionId, marketplace, remoteBatchId], map: "ProductBatchRequest_connectionId_marketplace_remoteBatchId_key")
  @@index([connectionId])
  @@index([remoteBatchId])
}
